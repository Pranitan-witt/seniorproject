<!DOCTYPE html>
<html lang="en">

<head>
  <title>Issuer</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" type="text/css" href="issuer.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<body>
  <div id="mySidenav" class="sidenav">
    <!-- <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a> -->
    <center>
      <img src="/pic/มหาลัยกลม.png" style="height:200px;width:200px;" class="rounded-circle" alt="pic">
      <h2 style="margin-top: -20px;">Issuer</h2>
      <hr style="background-color: whitesmoke;margin-top: -2px;">
      <h3 id="inbox">INBOX</h3>
      <hr style="background-color: whitesmoke;margin-top: -2px;">
      <% if(fs.existsSync(process.cwd()+'/requests/holder_request.credential')){ %>
        <a class="list" href="/checkdetail">นายประณิธาน วิทยารณยุทธ</a>
      <% }else{ %>
        <a class="list" style="text-decoration:none">ยังไม่มีคำร้องขอ</a>
      <% } %>
    </center>
  </div>

  <div id="main" class="row">
    <span style="font-size:30px;cursor:pointer;padding-left:15px;margin-right: -10px;" onclick="window.location='/'">VDEGREE</span>
    <div id="uuid">
      <% if(typeof(myuuid) != 'undefined') { %>
        <input type="text" placeholder="<%= myuuid %>" style="width:335px;" disabled>
      <% }else if(fs.existsSync(process.cwd()+'/wallet/issuer.credential')) { %>
        <input type="text" placeholder="<%= JSON.parse(fs.readFileSync(process.cwd()+'/wallet/issuer.credential')).uuid %>" style="width:335px;" disabled>
      <% } %>
    </div>

    <div id="content" class="col-sm-12">
      <div id="content-box">
        <p id="textbox">
          <% if( typeof(uuid) != 'undefined' && typeof(name) != 'undefined'){ %>
            UUID: <%= uuid %>
            <br>
            Name: <%= name %>
          <% } %>
          <!-- data -->
        </p>
      </div>
      <br>
      <center>
        <% if( typeof(uuid) != 'undefined' && typeof(name) != 'undefined'){ %>
          <form method="post" action="/issueDT" id="issue_dt" style="padding-top: 50px;">
            <input type="password" name="password" placeholder="Enter password"/>
          </form>
          <button type="submit" id="sentbtn" class="btn btn-dark btn-lg" form="issue_dt">อนุมัติ</button>
          <button type="button" id="sentbtn" class="btn btn-dark btn-lg">ไม่อนุมัติ</button>
        <% } %>
      </center>
    </div>
  </div>

  <script>
    // Navbar
    // function openNav() {
      document.getElementById("mySidenav").style.width = "250px";
      document.getElementById("main").style.marginLeft = "250px";
    // }

    // function closeNav() {
    //   document.getElementById("mySidenav").style.width = "0";
    //   document.getElementById("main").style.marginLeft = "0";
    // }

  </script>

</body>

</html>